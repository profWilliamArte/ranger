---
import { Image } from 'astro:assets';
import logo from '../img/logonegro.png';
---
<header>
<nav class="navbar navbar-expand-lg bg-black" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><Image src={logo} alt="logo" width={250}></Image></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Noticias</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/resultados">Resultados</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/calendarios">Calendarios</a>
          </li>


          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Estadisticas
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/estadisticas/estadisticasdejugadores">Estadísticas de Jugadores</a></li>
              <li><a class="dropdown-item" href="/estadisticas/estadisticasdelequipo">Estadísticas del Equipo</a></li>
              
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Equipo
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/equipo/alineacion">Alineacion</a></li>
              <li><a class="dropdown-item" href="/equipo/equipocompleto">Equipo Completo</a></li>
              <li><a class="dropdown-item" href="/equipo/instructores">Instructores</a></li>
              <li><a class="dropdown-item" href="/equipo/tecnicos">Técnicos</a></li>
              
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/videos">Videos</a>
          </li>

        </ul>
        <form class="d-flex" role="search">
          <input class="form-control me-2" type="search" placeholder="Buscar un jugador" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
      </div>
    </div>
  </nav>
</header>